generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model Pool {
  id           Int      @id @default(autoincrement())
  name         String
  symbol       String
  logo         String
  apr          Float
  totalStaked  Float
  address      String   // mint address
  pairAddress  String   // DexScreener pair address âœ…
  createdAt    DateTime @default(now())
}